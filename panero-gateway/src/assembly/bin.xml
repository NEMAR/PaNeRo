<assembly>
    <id>bin</id>
    <formats>
        <format>zip</format>
        <format>tar.gz</format>
        <!--<format>tar.bz2</format>-->
    </formats>
    <baseDirectory>${project.artifactId}</baseDirectory>
    <includeBaseDirectory>true</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}/config</directory>
            <outputDirectory>./config</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
            <excludes>
                <exclude>*-dev.yml</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/dependency</directory>
            <outputDirectory>./panero-gateway-client</outputDirectory>
            <includes>
                <include>panero-gateway-client*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/docs</directory>
            <outputDirectory>./panero-gateway-client</outputDirectory>
            <includes>
                <include>swagger*</include>
            </includes>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>${project.build.directory}/${project.artifactId}-${project.version}.${project.packaging}</source>
            <outputDirectory>./</outputDirectory>
            <destName>${project.artifactId}.${project.packaging}</destName>
        </file>
        <file>
            <source>${basedir}/src/assembly/start.conf</source>
            <outputDirectory>./</outputDirectory>
            <destName>${project.artifactId}.conf</destName>
        </file>
    </files>
</assembly>